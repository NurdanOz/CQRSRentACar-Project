@model List<CQRSRentACar.CQRSPattern.Results.TestimonialResult.GetTestimonialQueryResult>

<div class="container-fluid testimonial pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3"> Müşterilerimizi <span class="text-primary"> Görüşleri </span></h1>
            <p class="mb-0">
                Müşterilerimizin araç kiralama deneyimleri hakkındaki samimi yorumları. Sunduğumuz hizmet kalitesini birinci ağızdan dinleyin ve bize güvenle katılın.
            </p>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
            @foreach (var testimonial in Model)
            {
                <div class="testimonial-item">
                    <div class="testimonial-quote">
                        <i class="fa fa-quote-right fa-2x"></i>
                    </div>
                    <div class="testimonial-inner p-4">
                        <img src="~/@testimonial.ImageUrl" class="img-fluid" alt="@testimonial.NameSurname" onerror="this.src='/Cental-1.0.0/Cental-1.0.0/img/testimonial-1.jpg'">
                        <div class="ms-4">
                            <h4>@testimonial.NameSurname</h4>
                            <p>@testimonial.Profession</p>
                            <div class="d-flex text-primary">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= testimonial.Score)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-star text-body"></i>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="border-top rounded-bottom p-4">
                        <p class="mb-0">@testimonial.Comment</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>