                                                            </select>
                                                        </div>
                                                    </div>

                                                    <!-- BUTON -->
                                                    <div class="col-12">
                                                        <button type="submit" class="btn btn-light w-100 py-2">Müsait Araçları Göster</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 d-none d-lg-flex fadeInRight animated" data-animation="fadeInRight" data-delay="1s" style="animation-delay: 1s;">
                                        <div class="text-start">
                                            <h1 class="display-5 text-white">@slider.Title</h1>
                                            <p class="text-white">@slider.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    sliderIndex++;
                }
            }
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Tarih kontrolü
        var today = new Date().toISOString().split('T')[0];
        var pickUpDateInput = document.getElementById('pickUpDate');
        var dropOffDateInput = document.getElementById('dropOffDate');

        if (pickUpDateInput) {
            pickUpDateInput.setAttribute('min', today);

            pickUpDateInput.addEventListener('change', function() {
                dropOffDateInput.setAttribute('min', this.value);
            });
        }

        if (dropOffDateInput) {
            dropOffDateInput.setAttribute('min', today);
        }

        // Havalimanlarını yükle
        loadAirports();
    });

    async function loadAirports() {
        try {
            const response = await fetch('/Default/GetTurkeyAirports');
            const result = await response.json();

            if (result.success && result.data) {
                const pickupSelect = document.getElementById('pickupLocation');
                const dropoffSelect = document.getElementById('dropoffLocation');

                // Her iki dropdown'a da havalimanlarını ekle
                result.data.forEach(airport => {
                    // Pickup için option
                    const option1 = document.createElement('option');
                    option1.value = airport.name; // Tam isim gönder
                    option1.textContent = airport.name;
                    pickupSelect.appendChild(option1);

                    // Dropoff için option
                    const option2 = document.createElement('option');
                    option2.value = airport.name; // Tam isim gönder
                    option2.textContent = airport.name;
                    dropoffSelect.appendChild(option2);
                });

                console.log('✅ Havalimanları başarıyla yüklendi!');
            } else {
                console.error('❌ Havalimanları yüklenemedi:', result.message);
            }
        } catch (error) {
            console.error('❌ API hatası:', error);
        }
    }
</script>

<style>
    /* Dropdown stilini güzelleştir */
    #pickupLocation, #dropoffLocation {
        padding: 10px;
        font-size: 14px;
        border: none;
        background-color: white;
        cursor: pointer;
        max-height: 200px;
        overflow-y: auto;
    }

        #pickupLocation:focus, #dropoffLocation:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        }

        /* Dropdown seçeneklerini düzenle */
        #pickupLocation option, #dropoffLocation option {
            padding: 8px;
        }
</style>