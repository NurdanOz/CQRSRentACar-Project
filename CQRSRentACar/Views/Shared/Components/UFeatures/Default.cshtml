@using CQRSRentACar.CQRSPattern.Results.FeatureResults
@model List<GetFeatureQueryResult>

@{
    Layout = null;
}

<div class="container-fluid feature py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3"><span class="text-primary">Özellikler</span></h1>
            <p class="mb-0">
                Araç kiralama süreçlerinizi başlangıçtan bitişe kadar zahmetsizce yönetmeniz için tasarlandı: Size özel, en hızlı çözümleri ve maksimum konforu sunan ana özelliklerimizi keşfedin.
            </p>
        </div>
        <div class="row g-4 align-items-center">
            @if (Model != null && Model.Count >= 4)
            {
                <!-- Sol Taraf - İlk 2 Feature -->
                <div class="col-xl-4">
                    <div class="row gy-4 gx-0">
                        <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <span class="@Model[0].Icon fa-2x"></span>
                                </div>
                                <div class="ms-4">
                                    <h5 class="mb-3">@Model[0].Title</h5>
                                    <p class="mb-0">@Model[0].Description</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 wow fadeInUp" data-wow-delay="0.3s">
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <span class="@Model[1].Icon fa-2x"></span>
                                </div>
                                <div class="ms-4">
                                    <h5 class="mb-3">@Model[1].Title</h5>
                                    <p class="mb-0">@Model[1].Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orta - Resim -->
                <div class="col-lg-12 col-xl-4 wow fadeInUp" data-wow-delay="0.2s">
                    <img src="~/Cental-1.0.0/Cental-1.0.0/img/features-img.png" class="img-fluid w-100" style="object-fit: cover;" alt="Features">
                </div>

                <!-- Sağ Taraf - Son 2 Feature -->
                <div class="col-xl-4">
                    <div class="row gy-4 gx-0">
                        <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="feature-item justify-content-end">
                                <div class="text-end me-4">
                                    <h5 class="mb-3">@Model[2].Title</h5>
                                    <p class="mb-0">@Model[2].Description</p>
                                </div>
                                <div class="feature-icon">
                                    <span class="@Model[2].Icon fa-2x"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 wow fadeInUp" data-wow-delay="0.3s">
                            <div class="feature-item justify-content-end">
                                <div class="text-end me-4">
                                    <h5 class="mb-3">@Model[3].Title</h5>
                                    <p class="mb-0">@Model[3].Description</p>
                                </div>
                                <div class="feature-icon">
                                    <span class="@Model[3].Icon fa-2x"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">Henüz feature eklenmemiş.</p>
                </div>
            }
        </div>
    </div>
</div>