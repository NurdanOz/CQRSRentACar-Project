@using CQRSRentACar.Models
@using System.Globalization

@model List<CQRSRentACar.Models.FuelPrice>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var fuelPrices = Model ?? new List<FuelPrice>();

    Func<int, string> GetFuelType = (index) =>
    {
        if (fuelPrices.Count > index)
        {
          
            var type = fuelPrices[index].FuelType;
            return type.Replace("(GASOLINE)", "")
                      .Replace("(DIESEL)", "")
                      .Replace("(MIDGRADE)", "")
                      .Trim();
        }
        return "VERİ YOK";
    };

    Func<int, string> GetFuelPrice = (index) =>
        fuelPrices.Count > index ? fuelPrices[index].Price.ToString("N2") + " ₺" : "0.00 ₺";

    Func<int, string> GetFuelColor = (index) => fuelPrices.Count > index ? "text-success" : "text-danger";
}

