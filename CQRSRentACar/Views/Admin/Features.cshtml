@model List<CQRSRentACar.CQRSPattern.Results.FeatureResults.GetFeatureQueryResult>
@{
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 bg-gradient-primary">
                    <h6 class="text-white">⭐ Özellikler</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">🎯 Özellik</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">📋 Başlıklar</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">📝 Açıklamalar</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">🎨 Medya</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2 text-center">⚡ İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int colorIndex = 0;
                                }
                                @foreach (var feature in Model)
                                {
                                    var colors = new[] { "primary", "success", "info", "warning", "danger", "dark" };
                                    var currentColor = colors[colorIndex % colors.Length];
                                    colorIndex++;

                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <div class="avatar avatar-sm bg-gradient-@currentColor rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                        @if (!string.IsNullOrEmpty(feature.Icon))
                                                        {
                                                            <i class="@feature.Icon text-white text-sm"></i>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-white text-sm">⭐</span>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm font-weight-bold">@feature.Title</h6>
                                                    @if (!string.IsNullOrEmpty(feature.Title2))
                                                    {
                                                        <p class="text-xs text-secondary mb-0">@feature.Title2</p>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-1">Ana: @feature.Title</p>
                                            @if (!string.IsNullOrEmpty(feature.Title2))
                                            {
                                                <p class="text-xs text-secondary mb-0">Alt: @feature.Title2</p>
                                            }
                                        </td>
                                        <td>
                                            <p class="text-xs mb-1">
                                                @(feature.Description?.Length > 50 ? feature.Description.Substring(0, 50) + "..." : feature.Description)
                                            </p>
                                            @if (!string.IsNullOrEmpty(feature.Description2))
                                            {
                                                <p class="text-xs text-secondary mb-0">
                                                    @(feature.Description2?.Length > 50 ? feature.Description2.Substring(0, 50) + "..." : feature.Description2)
                                                </p>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(feature.ImageURL))
                                            {
                                                <p class="text-xs mb-1">
                                                    <i class="fas fa-image text-info"></i> Resim var
                                                </p>
                                            }
                                            @if (!string.IsNullOrEmpty(feature.Icon))
                                            {
                                                <span class="badge badge-sm bg-gradient-secondary">
                                                    @feature.Icon
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="UpdateFeature" asp-route-id="@feature.FeatureId" class="btn btn-sm btn-warning mb-0">
                                                <i class="fas fa-edit"></i> Düzenle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }
</style>