@model List<CQRSRentACar.CQRSPattern.Results.EmployeeResults.GetEmployeeQueryResult>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 bg-gradient-primary">
                    <div class="d-flex align-items-center">
                        <h6 class="text-white mb-0">👥 Personel Yönetimi</h6>
                        <a asp-action="CreateEmployee" class="btn btn-sm btn-light ms-auto">
                            <i class="fas fa-plus"></i> Yeni Personel Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">👤 Personel</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">💼 Ünvan</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">🖼️ Görsel</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2 text-center">⚡ İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int colorIndex = 0;
                                }
                                @foreach (var employee in Model)
                                {
                                    var colors = new[] { "primary", "success", "info", "warning", "danger", "dark" };
                                    var currentColor = colors[colorIndex % colors.Length];
                                    colorIndex++;

                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    @if (!string.IsNullOrEmpty(employee.ImageUrl) && employee.ImageUrl != "DENEME")
                                                    {
                                                        <img src="~/@employee.ImageUrl" class="avatar avatar-md rounded-circle me-2" alt="@employee.NameSurname">
                                                    }
                                                    else
                                                    {
                                                        <div class="avatar avatar-md bg-gradient-@currentColor rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                            <span class="text-white text-sm">👤</span>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm font-weight-bold">@employee.NameSurname</h6>
                                                    <p class="text-xs text-secondary mb-0">ID: @employee.EmployeeId</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-sm bg-gradient-@currentColor">
                                                @employee.Profession
                                            </span>
                                        </td>
                                        <td>
                                            <p class="text-xs mb-0">
                                                @(employee.ImageUrl?.Length > 30 ? employee.ImageUrl.Substring(0, 30) + "..." : employee.ImageUrl)
                                            </p>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="UpdateEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-warning mb-0 me-1">
                                                <i class="fas fa-edit"></i> Düzenle
                                            </a>
                                            <form asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId" method="post" class="d-inline" onsubmit="return confirm('Bu personeli silmek istediğinizden emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-danger mb-0">
                                                    <i class="fas fa-trash"></i> Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }

    .avatar-md {
        width: 48px;
        height: 48px;
        object-fit: cover;
    }
</style>