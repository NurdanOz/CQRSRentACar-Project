@model List<CQRSRentACar.CQRSPattern.Results.TestimonialResult.GetTestimonialQueryResult>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 bg-gradient-primary">
                    <div class="d-flex align-items-center">
                        <h6 class="text-white mb-0">💬 Müşteri Yorumları</h6>
                        <a asp-action="CreateTestimonial" class="btn btn-sm btn-light ms-auto">
                            <i class="fas fa-plus"></i> Yeni Yorum Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">👤 Müşteri</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">💼 Meslek</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">⭐ Puan</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">💬 Yorum</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2 text-center">⚡ İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int colorIndex = 0;
                                }
                                @foreach (var testimonial in Model)
                                {
                                    var colors = new[] { "primary", "success", "info", "warning", "danger", "dark" };
                                    var currentColor = colors[colorIndex % colors.Length];
                                    colorIndex++;

                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    @if (!string.IsNullOrEmpty(testimonial.ImageUrl))
                                                    {
                                                        <img src="~/@testimonial.ImageUrl" class="avatar avatar-md rounded-circle me-2" alt="@testimonial.NameSurname">
                                                    }
                                                    else
                                                    {
                                                        <div class="avatar avatar-md bg-gradient-@currentColor rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                            <span class="text-white text-sm">👤</span>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm font-weight-bold">@testimonial.NameSurname</h6>
                                                    <p class="text-xs text-secondary mb-0">ID: @testimonial.TestimonialId</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-sm bg-gradient-info">
                                                @testimonial.Profession
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= testimonial.Score)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-warning"></i>
                                                    }
                                                }
                                                <span class="ms-2 text-sm font-weight-bold">@testimonial.Score.ToString("0.00")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs mb-0">
                                                @(testimonial.Comment?.Length > 60 ? testimonial.Comment.Substring(0, 60) + "..." : testimonial.Comment)
                                            </p>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="UpdateTestimonial" asp-route-id="@testimonial.TestimonialId" class="btn btn-sm btn-warning mb-0 me-1">
                                                <i class="fas fa-edit"></i> Düzenle
                                            </a>
                                            <form asp-action="DeleteTestimonial" asp-route-id="@testimonial.TestimonialId" method="post" class="d-inline" onsubmit="return confirm('Bu yorumu silmek istediğinizden emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-danger mb-0">
                                                    <i class="fas fa-trash"></i> Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }

    .avatar-md {
        width: 48px;
        height: 48px;
        object-fit: cover;
    }

    .fa-star, .far.fa-star {
        font-size: 0.875rem;
    }
</style>