@model CQRSRentACar.CQRSPattern.Commands.CarCommand.CreateCarCommand
@{
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0 bg-gradient-primary">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-white mb-0">🚗 Yeni Araç Ekle</h6>
                        <a asp-action="Cars" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="CreateCar" method="post">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">📷 Araç Görseli URL</label>
                                <input type="text" class="form-control" asp-for="CarImage" placeholder="https://example.com/car.jpg">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">🏷️ Marka</label>
                                <input type="text" class="form-control" asp-for="CarBrand" placeholder="Toyota" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">🚙 Model</label>
                                <input type="text" class="form-control" asp-for="CarModel" placeholder="Corolla" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">📅 Yıl</label>
                                <input type="text" class="form-control" asp-for="CarYear" placeholder="2023" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label class="form-label">👥 Koltuk Sayısı</label>
                                <input type="text" class="form-control" asp-for="CarSeat" placeholder="5" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">⚙️ Vites</label>
                                <select class="form-control" asp-for="CarTransmission" required>
                                    <option value="">Seçiniz</option>
                                    <option value="OTOMATİK">Otomatik</option>
                                    <option value="MANUEL">Manuel</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">⛽ Yakıt Tipi</label>
                                <select class="form-control" asp-for="CarFuel" required>
                                    <option value="">Seçiniz</option>
                                    <option value="BENZİN">Benzin</option>
                                    <option value="MOTORİN">Motorin</option>
                                    <option value="HİBRİT">Hibrit</option>
                                    <option value="ELEKTRİK">Elektrik</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">🛣️ Kilometre</label>
                                <input type="text" class="form-control" asp-for="CarKm" placeholder="50000" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">⭐ Değerlendirme (0-5)</label>
                                <input type="number" step="0.1" class="form-control" asp-for="CarReview" placeholder="4.5" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">💰 Günlük Fiyat (₺)</label>
                                <input type="number" step="0.01" class="form-control" asp-for="CarPrice" placeholder="1500" required>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn bg-gradient-success w-100">
                                    <i class="fas fa-plus"></i> Araç Ekle
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>