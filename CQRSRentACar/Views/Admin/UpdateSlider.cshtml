@model CQRSRentACar.CQRSPattern.Results.SliderResults.GetSliderByIdQueryResult
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0 bg-gradient-warning">
                    <div class="d-flex align-items-center">
                        <h6 class="text-white mb-0">✏️ Slider Güncelle</h6>
                        <a asp-action="Sliders" class="btn btn-sm btn-light ms-auto">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateSlider" method="post">
                        <input type="hidden" asp-for="SliderId" />

                        <div class="row">
                            <!-- Mevcut Görsel Önizleme -->
                            <div class="col-md-12 mb-3">
                                <label class="form-label">🖼️ Mevcut Görsel</label>
                                <div class="text-center">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img src="@Model.ImageUrl" alt="Slider" class="img-fluid rounded shadow" style="max-height: 300px;">
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">Görsel bulunamadı</div>
                                    }
                                </div>
                            </div>

                            <!-- Başlık -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="Title" class="form-label">📌 Slider Başlığı</label>
                                <input asp-for="Title" class="form-control" placeholder="Örn: Kiralamanızda %15 İndirim">
                            </div>

                            <!-- Açıklama -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label">📝 Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Slider açıklamasını giriniz..."></textarea>
                            </div>

                            <!-- Görsel URL -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="ImageUrl" class="form-label">🔗 Görsel URL</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="Örn: /img/carousel-1.jpg">
                                <small class="text-muted">
                                    💡 Tam yol veya relatif yol girebilirsiniz (Örn: Cental-1.0.0/Cental-1.0.0/img/carousel-1.jpg)
                                </small>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="fas fa-save"></i> Değişiklikleri Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .btn-sm {
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
    }

    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>