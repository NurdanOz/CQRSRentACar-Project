@model CQRSRentACar.CQRSPattern.Results.ServiceResults.GetServiceByIdQueryResult
@{
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0 bg-gradient-warning">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-white mb-0">✏️ Hizmet Düzenle</h6>
                        <a asp-action="Services" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateService" method="post">
                        <input type="hidden" name="ServiceId" value="@Model.ServiceId" />

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">🎯 Hizmet Başlığı</label>
                                <input type="text" class="form-control" name="Title" value="@Model.Title" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">📝 Açıklama</label>
                                <textarea class="form-control" name="Description" rows="5" required>@Model.Description</textarea>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">🎨 Icon (Font Awesome Class)</label>
                                <input type="text" class="form-control" name="IconUrl" value="@Model.IconUrl" placeholder="fa fa-phone">
                                <small class="text-muted">Örnek: fa fa-phone, fa fa-money-bill, fa fa-road</small>

                                @if (!string.IsNullOrEmpty(Model.IconUrl))
                                {
                                    <div class="mt-3">
                                        <div class="p-3 border rounded bg-light text-center">
                                            <i class="@Model.IconUrl" style="font-size: 3rem; color: #344767;"></i>
                                            <p class="text-xs text-secondary mt-2 mb-0">Önizleme</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn bg-gradient-warning w-100">
                                    <i class="fas fa-save"></i> Değişiklikleri Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control {
        border: 1px solid #d2d6da;
    }

        .form-control:focus {
            border-color: #fb8c00;
            box-shadow: 0 0 0 0.2rem rgba(251, 140, 0, 0.25);
        }
</style>