@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Bize Ulaşın</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="#">Sayfalar</a></li>
            <li class="breadcrumb-item active text-primary">İletişim</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Bizimle <span class="text-primary">İletişime Geçin</span></h1>
            <p class="mb-0">
                Araç kiralama hizmetlerimiz hakkında detaylı bilgi almak, rezervasyon yapmak veya önerilerinizi iletmek için aşağıdaki formu doldurabilirsiniz.
            </p>
        </div>

        <div class="row g-5">
            <!-- Form Section -->
            <div class="col-xl-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-secondary p-5 rounded">
                    <h4 class="text-primary mb-4">Mesajınızı Gönderin</h4>
                    <form method="post">
                        <div class="row g-4">
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" id="fullname" name="FullName" placeholder="Adınız" required>
                                    <label for="fullname">Adınız</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" id="surname" name="Surname" placeholder="Soyadınız" required>
                                    <label for="surname">Soyadınız</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control border-0" id="email" name="Email" placeholder="E-posta" required>
                                    <label for="email">E-posta</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="tel" class="form-control border-0" id="phone" name="Phone" placeholder="Telefon">
                                    <label for="phone">Telefon</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" id="subject" name="Subject" placeholder="Konu" required>
                                    <label for="subject">Konu</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-0" placeholder="Mesajınız" id="message" name="MessageDetail" style="height: 160px" required></textarea>
                                    <label for="message">Mesajınız</label>
                                </div>
                            </div>

                            <!-- Hidden fields for Name and Surname -->
                            <input type="hidden" name="Name" value="0" />
                            <input type="hidden" name="Surname" value="" />

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100 py-3">
                                    <i class="fas fa-paper-plane me-2"></i>Mesajı Gönder
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Social Media Section -->
            <div class="col-12 col-xl-1 wow fadeInUp" data-wow-delay="0.3s">
                <div class="d-flex flex-xl-column align-items-center justify-content-center h-100">
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-4 me-4 me-xl-0" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-4 me-4 me-xl-0" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-4 me-4 me-xl-0" href="#"><i class="fab fa-instagram"></i></a>
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-0 me-0 me-xl-0" href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <!-- Contact Info Section -->
            <div class="col-12 col-xl-5 wow fadeInUp" data-wow-delay="0.1s">
                <div class="p-5 bg-light rounded">
                    <div class="bg-white rounded p-4 mb-4">
                        <h4 class="mb-3 text-primary">Merkez Şube</h4>
                        <div class="d-flex align-items-center flex-shrink-0 mb-3">
                            <p class="mb-0 text-dark me-2 fw-bold">Adres:</p>
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            <p class="mb-0">İstanbul, Kadıköy</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <p class="mb-0 text-dark me-2 fw-bold">Telefon:</p>
                            <i class="fa fa-phone-alt text-primary me-2"></i>
                            <p class="mb-0">0538 777 77 77</p>
                        </div>
                    </div>
                    <div class="bg-white rounded p-4 mb-4">
                        <h4 class="mb-3 text-primary">Ankara Şube</h4>
                        <div class="d-flex align-items-center mb-3">
                            <p class="mb-0 text-dark me-2 fw-bold">Adres:</p>
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            <p class="mb-0">Ankara, Çankaya</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <p class="mb-0 text-dark me-2 fw-bold">Telefon:</p>
                            <i class="fa fa-phone-alt text-primary me-2"></i>
                            <p class="mb-0">0312 123 45 67</p>
                        </div>
                    </div>
                    <div class="bg-white rounded p-4 mb-0">
                        <h4 class="mb-3 text-primary">İzmir Şube</h4>
                        <div class="d-flex align-items-center mb-3">
                            <p class="mb-0 text-dark me-2 fw-bold">Adres:</p>
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            <p class="mb-0">İzmir, Karşıyaka</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <p class="mb-0 text-dark me-2 fw-bold">Telefon:</p>
                            <i class="fa fa-phone-alt text-primary me-2"></i>
                            <p class="mb-0">0232 987 65 43</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>